    "version": "0.2.0",
    "configurations": [
        {
            "name": "Schoolar cppdbg",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build/Schoolar",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Schoolar lldb",
            "program": "${workspaceRoot}/build/Schoolar",
            "args": [],
            "cwd": "${workspaceRoot}/build"
        }
    ]
}